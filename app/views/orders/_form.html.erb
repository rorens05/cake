<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :ordered_at %>
    <%= form.datetime_select :ordered_at %>
  </div>

  <div class="field">
    <%= form.label :customer_id %>
    <%= form.select :customer_id, options_from_collection_for_select(Customer.all, 'id', 'name', form.object.customer_id) %>
  </div>

  <div class="field">
    <%= form.label :product_id %>
    <%= form.select :product_id, options_from_collection_for_select(Product.all, 'id', 'name', form.object.product_id) %>
  </div>
  
  <div class="field" id='sizeList'>
    <%= form.label :size_id %>
    <%= form.select :size_id, options_from_collection_for_select(@sizes, 'id', 'label', form.object.size_id) %>
  </div>

  <div class="field">
    <%= form.label :no_of_items %>
    <%= form.number_field :no_of_items %>
  </div>

  <div class="field">
    <%= form.label :payment_method %>
    <%= form.text_field :payment_method %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
