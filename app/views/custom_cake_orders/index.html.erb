
<div class="row my-row">
  <div class='col-sm-12 my-container'> 
  
    <p id="notice"><%= notice %></p>

    <h1>Custom Cake Orders</h1>

    <table>
      <thead>
        <tr>
          <th>Theme</th>
          <th>Customer</th>
          <th>Quantity</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @custom_cake_orders.each do |custom_cake_order| %>
          <tr>
            <td><%= custom_cake_order.theme %></td>
            <td><%= custom_cake_order.customer.name %></td>
            <td><%= custom_cake_order.quantity %></td>
            <td><%= custom_cake_order.price %></td>
            <td><%= link_to 'Show', custom_cake_order %></td>
            <td><%= link_to 'Delete', custom_cake_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Custom Cake Order', new_custom_cake_order_path %>

  </div>
</div>