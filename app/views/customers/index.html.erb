

<div class="row my-row">
  <div class='col-sm-12 my-container'> 
    <p id="notice"><%= notice %></p>

    <h1>Customers</h1>

    <table id="myTable">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Address</th>
          <th>Contact no</th>
          <th>Email</th>
          <th>Gender</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= image_tag validate_image(customer.image) %></td>
            <td><%= link_to customer.name, customer %></td>
            <td><%= customer.address %></td>
            <td><%= customer.contact_no %></td>
            <td><%= customer.email %></td>
            <td><%= customer.gender %></td>
            <td><%= customer.status %></td>
            <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Customer', new_customer_path, class: 'btn btn-primary' %>    
    
  </div>
</div> 